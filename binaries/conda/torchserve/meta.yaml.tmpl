package:
  name: torchserve
  version: {version}

requirements:
  build:
    - python
    - setuptools

  run:
    - python
    - pillow
    - psutil
    - future

build:
  noarch: generic
  script_env:
    - TORCHSERVE_WHEEL

about:
  home: https://github.com/pytorch/serve
  summary: 'Model serving on PyTorch'
